
          <div class="col-sm-10 col-md-10 col-xs-12" style="height: 100%; ">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Supplier's Information</h3>
        </div>
        <div class="panel-body" style="height: 100%; ">
          <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Edit Supplier</h3>
                      </div>
                      <div class="panel-body">
                        <%= bootstrap_form_for @supplier do |f|%>
                          <form class="form-horizontal" role "form">
                           
                            
                            <%= f.text_field :SupplierName, label:"Company Name:", label_class: "control-label"%>
                            <%= f.text_field :MailingAddress, label:"Company Location:", label_class: "control-label"%>
                            <%= f.text_field :ContactPerson, label:"Contact Person:", label_class: "control-label"%>
                            <%= f.text_field :ContactNumber, label:"Cotact Number:", label_class: "control-label"%>
                           
                            <%= f.text_field :EmailAddress, label:"Email Address:", label_class: "control-label"%>
                            <%= f.submit "Submit", class: "btn btn-success"%>
                            
                          </form>
                          <%end%>
                      </div>

                  </div>
        </div>
        <div class="panel-footer"></div>
      </div>
    </div>