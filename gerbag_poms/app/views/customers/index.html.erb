 <div class="col-sm-10 col-md-10 col-xs-12" style="height: 100%; ">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Manage your Customers</h3>
        </div>
        <div class="panel-body" style="height: 100%; ">
         <!--Table Start TABLE TABLE TABLE TABLE-->    
              <div class="container-fluid" >
            <div class="table-responsive" style="height: 100;">
                 
                        <table id="myTable" class=" display select table table-hover table-stripped table-condensed" cellspacing="0" width="100%">
                          <thead>
                          <tr>
                            <th>Company Name</th>
                            <th>Mailing Address</th>
                            <th>Contact Person</th>
                            <th>Contact Number</th>
                            <th>Email Address</th>
                            <td></td>
                          </tr>
                          </thead>
                          <tbody>
                          <% Customer.all.each do |customer|%>
                          <tr>
                           
                            <td><%= customer.CustomerName %></td>
                            <td><%= customer.MailingAddress %></td>
                            <td><%= customer.ContactPerson %></td>
                            <td><%= customer.ContactNumber %></td>
                            <td><%= customer.EmailAddress %></td>
                            <td class="display select">
                            
                           
                         
                                <div>
                          
            <a class="btn btn-warning center-block" data-toggle="modal" data-target="#editmodal">Edit</a>
              <div class="modal fade" id="editmodal" tabIndex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h1 style="text-align: center;">Update</h1>
                    </div>
                    <div class="modal-body">
                      <div class="container-fluid">
                     
                     <form class="form-horizontal" role="form">
                        <%= bootstrap_form_for @customer do |f|%>
                        <div class="form-group">
                          <label class="control-label">ID:</label>
                       
                            <p class="form-control-static"></p><!--Customerid-->
                         
                        </div>
                        <div class="form-group">
                          
                          <div class="">          
                            <%= f.text_field :CustomerName, label:"Company Name:", label_class: "control-label"%>
                          </div>
                        </div>
                          <div class="form-group">
                           
                            <%= f.text_field :MailingAddress, label:"Company Location:" ,label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                           
                            <%= f.text_field :ContactPerson, label:"Contact Person:", label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                           
                            <%= f.text_field :ContactNumber, label:"Contact Number:", label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                          
                            <%= f.text_field :EmailAddress, label:"Email Address:", label_class: "control-label"%>
                            
                          </div>
      <div class="modal-footer">
                      <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-10">
                             <%= f.submit "Submit", class: "btn btn-success"%>
                            <%end%>
                                </div>
                        </div>
                    </div>
                      </form>
            </div>

    </div>
   
        <!-- TABLE END -->
   
                  
                    
                  </div>
                </div>
              </div>
          </div>
                            
                            </td>
                            <td class="display select">
                               <div >
            <a class="btn btn-danger center-block" data-toggle="modal" data-target="#deletemodal">Delete</a>
              <div class="modal fade" id="deletemodal" tabIndex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h1 style="text-align: center;">Delete Customer?</h1>
                    </div>
                    <div class="modal-body">
                      <div class="container-fluid">
                     
                     Are you sure you want to delete customer?
            </div>

    </div>
  
       
   
                    <div class="modal-footer">
                      <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-10">
                           
                            <%= button_to "Confirm",customer, method: :delete, class: "btn btn-danger"%>
                          </div>
                        </div>
                    </div>
                    
                  </div>
                </div>
                <%end%>
              </div>
          </div>
                            </td>
                            
                          </tr>

                          </tbody>

                      
                        </table>

              </div>

    <div class="panel-footer">
    <!--ADD NEW CUSTOMER -->
          <div class="col-md-4 col-sm-4 col-xs-12">
            <a class="btn btn-primary center-block" data-toggle="modal" data-target="#mymodal">Add New Customer</a>
              <div class="modal fade" id="mymodal" tabIndex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h1 style="text-align: center;">Add New Customer</h1>
                    </div>
                    <div class="modal-body">
                      <div class="container-fluid">
                     
                      <form class="form-horizontal" role="form">
                        <%= bootstrap_form_for @customer do |f|%>
                        <div class="form-group">
                          <label class="control-label">ID:</label>
                       
                            <p class="form-control-static"><</p><!--Customerid-->
                         
                        </div>
                        <div class="form-group">
                          
                          <div class="">          
                            <%= f.text_field :CustomerName, label:"Company Name:", label_class: "control-label"%>
                          </div>
                        </div>
                          <div class="form-group">
                           
                            <%= f.text_field :MailingAddress, label:"Company Location:" ,label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                           
                            <%= f.text_field :ContactPerson, label:"Contact Person:", label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                           
                            <%= f.text_field :ContactNumber, label:"Contact Number:", label_class: "control-label"%>
                          </div>
                          <div class="form-group">
                          
                            <%= f.text_field :EmailAddress, label:"Email Address:", label_class: "control-label"%>
                            
                          </div>
      <div class="modal-footer">
                      <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-10">
                             <%= f.submit "Submit", class: "btn btn-success"%>
                            <%end%>
                                </div>
                        </div>
                    </div>
                      </form>
            </div>

    </div>
  
        <!-- TABLE END -->
   
                    
                           
                         
                           
                      
                    
                  </div>
                </div>
              </div>
          </div>
           
        <!-- -->
        </div>
          
         </div>
      </div>
    </div>
  </div>
</div>