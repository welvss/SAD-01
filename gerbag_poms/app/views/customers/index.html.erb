 <div class="col-sm-10 col-md-10 col-xs-12" style="height: 100%; ">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Manage your Customers</h3>
        </div>
        <div class="panel-body" style="height: 100%; ">
         <!--Table Start TABLE TABLE TABLE TABLE-->    
              <div class="container-fluid" >
            <div class="table-responsive" style="height: 100;">
                 
                        <table id="myTable" class=" display select table table-hover table-stripped table-condensed" cellspacing="0" width="100%">
                          <thead>
                          <tr>
                            <th><input name="select_all" value="1" type="checkbox"></th>
                    
                            <th>Company Name</th>
                            <th>Mailing Address</th>
                            <th>Contact Person</th>
                            <th>Contact Number</th>
                            <th>Email Address</th>
                            <td></td>
                          </tr>
                          </thead>
                          <tbody>
                          <%= Customer.all.each do |customer|%>
                          <tr>
                           <td></td>
                            <td><%= customer.CustomerName %></td>
                            <td><%= customer.MailingAddress %></td>
                            <td><%= customer.ContactPerson %></td>
                            <td><%= customer.ContactNumber %></td>
                            <td><%= customer.EmailAddress %></td>
                            <td class="display select">
                            
                           
                         
                                <div>
                          
            <a class="btn btn-warning center-block" data-toggle="modal" data-target="#editmodal">Edit</a>
              <div class="modal fade" id="editmodal" tabIndex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h1 style="text-align: center;">Update</h1>
                    </div>
                    <div class="modal-body">
                      <div class="container-fluid">
                     
                      <form class="form-horizontal" role="form">
                        <div class="form-group">
                          <label class="control-label">ID:</label>
                       
                            <p class="form-control-static">1</p><!--Customerid-->
                         
                        </div>
                        <div class="form-group">
                          <label class="control-label  ">Company Name:</label>
                          <div class="">          
                            <input type="text" class="form-control">
                          </div>
                        </div>
                          <div class="form-group">
                            <label class="control-label">Company Location:</label>
                            <input type="text" class="form-control">
                          </div>
                          <div class="form-group">
                            <label class="control-label">Contact Person:</label>
                            <input type="text" class="form-control">
                          </div>
                          <div class="form-group">
                            <label class="control-label">Contact Number</label>
                            <input type="text" class="form-control">
                          </div>
                          <div class="form-group">
                            <label class="control-label">Email Address</label>
                            <input type="text" class="form-control">
                          </div>

                        
                      </form>
            </div>

    </div>
  
        <!-- TABLE END -->
   
                    <div class="modal-footer">
                      <div class="form-group">        
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Submit</button>
                          </div>
                        </div>
                    </div>
                     <%end%>
                  </div>
                </div>
              </div>
          </div>
                            
                            </td>
                            
                          </tr>

                          </tbody>

                      
                        </table>

              </div>

    <div class="panel-footer">
    <!--ADD NEW CUSTOMER -->
