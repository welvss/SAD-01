                                  <p class="form-control-static">
                                  <%= @customer.CustomerName%></p>
                              </div>
                          </div>
                          
                       
                        <div class="col-md-4 col-md-offset-4">
                                  <%= link_to "Edit",edit_customer_path(@customer),class: "btn btn-warning center-block" %>
                               </div>
                                </form>
                    </div>
                                
                </div>
                      
              </div>
                <div>
                  <div class="panel panel-default">
