                          <div class="form-group">
                              <label class="control-label col-sm-2" for="Account">Account #:</label>
                              <div class="col-sm-10">
                                  <p class="form-control-static"><%= @customer.CustomerID%></p>
                              </div>
                          </div>
                          
                        </form>
                       
                        <form class="form-horizontal" role"form">

                          <div class="form-group">
                              <label class="control-label col-sm-2" 
