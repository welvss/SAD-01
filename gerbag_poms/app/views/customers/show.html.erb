                              <label class="control-label col-sm-2" for="Contactperson">Contact Person: </label>
                                <div class="col-sm-10">
                                  <p class="form-control-static">
                                  <%= @customer.ContactPerson %></p>
                                </div>
                            </div>
                            
                          </form>
                          <form class="form-horizontal" role "form">
                            <div class="form-group">
                              <label class="control-label col-sm-2" for="Contactnumber">Contact Number: </label>
                                <div class="col-sm-10">
                                  <p class="form-control-static"><%= @customer.ContactNumber %></p>
                                </div>
                            </div>
                            
                          </form>
                           <form class="form-horizontal" role "form">
                            <div class="form-group">
                              <label class="control-label col-sm-2" for="Email">Email Address: </label>
                                <div class="col-sm-10">
                                  <p class="form-control-static">
                                  <%= @customer.EmailAddress %></p>
                                </div>
                            </div>
                            
                          </form>
                          <div class="col-md-3 col-md-offset-3">
